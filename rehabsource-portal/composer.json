{
    "name": "rehabsource/portal",
    "description": "Rehab Source - Australian OT + Physio All-in-One Portal",
    "type": "project",
    "license": "proprietary",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Rehab Source",
            "email": "support@rehab-source.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-gd": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-zip": "*",
        "vlucas/phpdotenv": "^5.6",
        "firebase/php-jwt": "^6.10",
        "intervention/image": "^3.7",
        "phpmailer/phpmailer": "^6.9",
        "ramsey/uuid": "^4.7",
        "monolog/monolog": "^3.7",
        "paragonie/sodium_compat": "^2.0",
        "owasp/csrf-protector-php": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.12",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
        "psr-4": {
            "RehabSource\\": "app/"
        },
        "files": [
            "app/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "RehabSource\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse app --level=6",
        "cs-check": "phpcs app --standard=PSR12",
        "cs-fix": "phpcbf app --standard=PSR12"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
